{
    "allure": {
        "results_directory": "test_results/allure-results",
        "report_directory": "test_results/allure-report",
        "clean_results_directory": true
    },
    "environment": {
        "browser": "Chrome",
        "platform": "Windows 10",
        "test_framework": "Pytest + Playwright"
    },
    "categories": [
        {
            "name": "Критические ошибки",
            "messageRegex": ".*AssertionError.*",
            "traceRegex": ".*",
            "matchedStatuses": ["failed"]
        },
        {
            "name": "Таймауты",
            "messageRegex": ".*TimeoutError.*",
            "traceRegex": ".*",
            "matchedStatuses": ["broken"]
        },
        {
            "name": "Проблемы с элементами",
            "messageRegex": ".*Element.*not.*found.*",
            "traceRegex": ".*",
            "matchedStatuses": ["broken"]
        }
    ],
    "executors": [
        {
            "name": "Local Test Run",
            "type": "local",
            "url": "http://localhost",
            "buildOrder": 1,
            "buildName": "Локальный запуск тестов",
            "buildUrl": "http://localhost",
            "reportName": "Отчет автотестов Liner",
            "reportUrl": "http://localhost"
        }
    ]
}